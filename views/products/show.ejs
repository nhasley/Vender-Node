<%- include('../partials/header') %>

<img class="pimg" src="/images/<%= product.image %>">
<section id="show-page">
    <div>Price: </div>
    <div>$<%= product.price %></div>
    <div>Rating: </div>
    <div><%= product.condition %></div>
    <div>Description: </div>
    <div><%= product.description %></div>
</section>

<br><br>
<div class="review">
    <h2>Reviews</h2>
    <form id="add-review-form" method="POST" action="/products/<%= product._id %>/reviews">
        <label>Review:</label>
        <textarea name="content"></textarea>
        <label>Rating:</label>
        <select name="rating">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <input type="submit" value="Add Review">
    </form>
</div>

<% if (product.reviews.length) { %>
<table>
    <thead>
        <tr>
            <th>Date</th>
            <th>Review</th>
            <th>Rating</th>
        </tr>
    </thead>
    <tbody>
        <% var total = 0 %>
        <% product.reviews.forEach(function(r) { %>
        <% total += r.rating %>
        <tr>
            <td><%= r.createdAt.toLocaleDateString() %></td>
            <td><%= r.content %></td>
            <td><%= r.rating %></td>
            <% if (product._id.equals(user && user._id)) { %>
            <form action="/products/<%= product._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST"
                class="secondary-content">
                <button type="submit" class="btn-small red-text">X</button>
            </form>
            <% } %>
        </tr>
        <% }); %>
        <tr>
            <td colspan="2"></td>
            <td><strong><%= (total / product.reviews.length).toFixed(1) %></strong></td>
        </tr>
    </tbody>
</table>
<% } else { %>
<h5>No Reviews Yet</h5>
<% } %>

<%- include('../partials/footer') %>